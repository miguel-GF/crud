.padding{
	padding-top: 25px;
	padding-bottom: 10px;
}

.hover{
	transition: all 1.0s ease;
	cursor: pointer;
}
.hover:hover{
	opacity: 0.6;
}

.empleado{
	background-color: #c4c4d2;
	border-radius: 50px;
	padding-top: 10px;
	padding-bottom: 10px;
}

.borrar{
	background-color: #f35033;
	border-radius: 50px;
	padding-top: 10px;
	padding-bottom: 10px;
}

span{
	color: white;
	font-weight: bold;
}
